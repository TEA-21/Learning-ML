{"nbformat":4,"nbformat_minor":0,"metadata":{"colab":{"provenance":[],"authorship_tag":"ABX9TyNxyhGfcIvrC49dYVD3hX+6"},"kernelspec":{"name":"python3","display_name":"Python 3"},"language_info":{"name":"python"}},"cells":[{"cell_type":"code","execution_count":null,"metadata":{"id":"XCX1GV15zo7L"},"outputs":[],"source":["\n","print(\"ðŸš€ Installing libraries...\")\n","\n","!pip install \"fastapi[all]\" -q\n","\n","!pip install \"playwright\" \"pyngrok\" -q\n","\n","!playwright install\n","\n","print(\"âœ… Installations complete!\")"]},{"cell_type":"code","source":["\n","%%writefile main.py\n","\n","import io\n","from fastapi import FastAPI\n","from fastapi.responses import StreamingResponse\n","from pydantic import BaseModel, Field\n","from enum import Enum\n","from typing import List\n","from playwright.async_api import async_playwright\n","import asyncio\n","\n","app = FastAPI(\n","    title=\"Advanced OMR Sheet Generator API\",\n","    description=\"An API to generate customizable OMR sheets as PDF files, running on Google Colab.\",\n","    version=\"1.0.0\",\n",")\n","\n","# --- Pydantic Models for Request Body ---\n","\n","class QuestionType(str, Enum):\n","    mcq4 = \"mcq4\"\n","    integer = \"integer\"\n","\n","class LayoutType(str, Enum):\n","    three_column = \"3-col\"\n","    vertical = \"vertical\"\n","\n","class SectionConfig(BaseModel):\n","    name: str = Field(\"Section\", description=\"The name of the section, e.g., 'Physics'.\")\n","    num_questions: int = Field(..., gt=0, description=\"Number of questions in this section.\")\n","    question_type: QuestionType = Field(..., description=\"The type of questions (MCQ or Integer).\")\n","\n","class OMRRequest(BaseModel):\n","    layout: LayoutType = Field(LayoutType.three_column, description=\"The layout of the question area.\")\n","    sections: List[SectionConfig] = Field(..., min_length=1, description=\"A list of sections to include in the OMR sheet.\")\n","\n","\n","\n","def create_bubble_svg(text: str, font_size: int = 8) -> str:\n","    size = 14\n","    radius = 6\n","    return f'''\n","        <span style=\"display: inline-block; width: {size}px; height: {size}px; vertical-align: middle;\">\n","            <svg width=\"{size}\" height=\"{size}\" viewBox=\"0 0 {size} {size}\" xmlns=\"http://www.w3.org/2000/svg\" overflow=\"visible\">\n","                <circle cx=\"{size/2}\" cy=\"{size/2}\" r=\"{radius}\" stroke=\"#9CA3AF\" stroke-width=\"1\" fill=\"none\" />\n","                <text x=\"{size/2}\" y=\"{size/2}\" font-family=\"Inter, sans-serif\" font-size=\"{font_size}px\" font-weight=\"300\" fill=\"#374151\" text-anchor=\"middle\" dominant-baseline=\"central\">\n","                    {text}\n","                </text>\n","            </svg>\n","        </span>\n","    '''\n","\n","def generate_omr_html(config: OMRRequest) -> str:\n","    roll_number_boxes = ''.join(['<div class=\"border border-black flex-1 h-6\"></div>' for _ in range(10)])\n","    roll_number_grid = ''.join([\n","        f'<div class=\"px-0.5\">{\"\".join([f\"<div class=py-px>{create_bubble_svg(str(j))}</div>\" for j in range(10)])}</div>'\n","        for i in range(10)\n","    ])\n","    marker_svg = '''<svg width=\"100%\" height=\"100%\" viewBox=\"0 0 30 30\" xmlns=\"http://www.w3.org/2000/svg\" shape-rendering=\"crispEdges\"><rect width=\"30\" height=\"30\" fill=\"black\"/><rect x=\"11\" y=\"1\"  width=\"8\" height=\"8\" fill=\"white\"/><rect x=\"1\"  y=\"11\" width=\"8\" height=\"8\" fill=\"white\"/><rect x=\"21\" y=\"11\" width=\"8\" height=\"8\" fill=\"white\"/><rect x=\"11\" y=\"21\" width=\"8\" height=\"8\" fill=\"white\"/></svg>'''\n","\n","    total_question_count = 0\n","    sections_html = \"\"\n","    for section in config.sections:\n","        section_content = f'<h2 class=\"text-sm font-bold text-center mb-2\">{section.name.upper()}</h2>'\n","        question_items = []\n","        for i in range(1, section.num_questions + 1):\n","            q_num = total_question_count + i\n","            if section.question_type == QuestionType.mcq4:\n","                bubbles = ''.join([create_bubble_svg(opt, 10) for opt in ['A', 'B', 'C', 'D']])\n","                question_items.append(f'<div style=\"display: flex; align-items: center; height: 20px;\"><span class=\"font-bold w-6 text-right text-xs pr-1\">{q_num}.</span>{bubbles}</div>')\n","            elif section.question_type == QuestionType.integer:\n","                cols = []\n","                for col_idx in range(4):\n","                    bubbles = create_bubble_svg('.') + ''.join([create_bubble_svg(str(d)) for d in range(10)])\n","                    if col_idx == 0: bubbles += create_bubble_svg('-')\n","                    cols.append(f'<div>{bubbles}</div>')\n","                grid = ''.join(cols)\n","                boxes = ''.join(['<div class=\"h-4 w-4 border border-gray-500\"></div>' for _ in range(4)])\n","                question_items.append(f'<div class=\"p-1 border border-black rounded mt-2\"><div class=\"flex flex-col items-center\"><span class=\"font-bold text-xs\">{q_num}.</span><div class=\"flex space-x-1 mt-1\">{boxes}</div><div class=\"flex space-x-0.5 mt-1\">{grid}</div></div></div>')\n","\n","        if section.question_type == QuestionType.mcq4:\n","            midpoint = (len(question_items) + 1) // 2\n","            col1 = \"\".join(question_items[:midpoint])\n","            col2 = \"\".join(question_items[midpoint:])\n","            section_body = f'<div class=\"grid grid-cols-2 gap-x-2\"><div>{col1}</div><div>{col2}</div></div>'\n","        else:\n","            section_body = f'<div class=\"grid grid-cols-2 gap-2\">{\"\".join(question_items)}</div>'\n","\n","        sections_html += f'<div class=\"border border-black p-2 mt-2\" style=\"break-inside: avoid;\">{section_content}{section_body}</div>'\n","        total_question_count += section.num_questions\n","\n","    layout_style = \"column-count: 3; column-gap: 8px;\" if config.layout == LayoutType.three_column else \"\"\n","\n","    return f'''\n","    <!DOCTYPE html>\n","    <html lang=\"en\">\n","    <head>\n","        <meta charset=\"UTF-8\"><title>OMR Sheet</title>\n","        <script src=\"https://cdn.tailwindcss.com\"></script>\n","        <link href=\"https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap\" rel=\"stylesheet\">\n","        <style> body {{ font-family: 'Inter', sans-serif; }} .omr-sheet {{ width: 210mm; height: 297mm; }} </style>\n","    </head>\n","    <body class=\"bg-gray-100\">\n","        <div id=\"omr-sheet\" class=\"omr-sheet relative bg-white p-4 mx-auto flex flex-col\">\n","            <div style=\"position: absolute; top: 0; left: 0; width: 5mm; height: 5mm;\">{marker_svg}</div>\n","            <div style=\"position: absolute; top: 0; right: 0; width: 5mm; height: 5mm;\">{marker_svg}</div>\n","            <div style=\"position: absolute; bottom: 0; left: 0; width: 5mm; height: 5mm;\">{marker_svg}</div>\n","            <div style=\"position: absolute; bottom: 0; right: 0; width: 5mm; height: 5mm;\">{marker_svg}</div>\n","            <div class=\"flex space-x-2 border-b-2 border-black pb-2 mb-2\">\n","                <div class=\"w-2/5 border border-black p-1\">\n","                    <p class=\"font-bold text-center text-sm mb-1\">Roll Number</p>\n","                    <div class=\"flex\">{roll_number_boxes}</div><div class=\"flex justify-center\">{roll_number_grid}</div>\n","                </div>\n","                <div class=\"w-3/5\"> </div>\n","            </div>\n","            <div class=\"flex-grow overflow-hidden\" style=\"{layout_style}\">{sections_html}</div>\n","        </div>\n","    </body>\n","    </html>\n","    '''\n","\n","@app.post(\"/generate-omr/\", response_class=StreamingResponse)\n","async def generate_omr_pdf(request: OMRRequest):\n","    html_content = generate_omr_html(request)\n","    async def run_playwright():\n","        async with async_playwright() as p:\n","            browser = await p.chromium.launch()\n","            page = await browser.new_page()\n","            await page.set_content(html_content, wait_until=\"networkidle\")\n","            pdf_bytes = await page.pdf(format=\"A4\", print_background=True)\n","            await browser.close()\n","            return pdf_bytes\n","\n","    pdf_bytes = await asyncio.to_thread(lambda: asyncio.run(run_playwright()))\n","\n","    return StreamingResponse(\n","        io.BytesIO(pdf_bytes),\n","        media_type=\"application/pdf\",\n","        headers={\"Content-Disposition\": \"attachment; filename=generated-omr-sheet.pdf\"}\n","    )\n","\n","@app.get(\"/\")\n","async def root():\n","    return {\"message\": \"OMR Generator API is running!\"}"],"metadata":{"id":"D3NemJa_zvre"},"execution_count":null,"outputs":[]}]}